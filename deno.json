{
	"name": "@nihility-io/crypto",
	"version": "1.0.0-beta.0",
	"exports": "./mod.ts",
	"lock": true,
	"tasks": {
		"test": "deno test --coverage=coverage && deno coverage coverage --detailed"
	},
	"imports": {
		"@noble/ciphers": "jsr:@noble/ciphers@^1.3.0",
		"@noble/hashes": "jsr:@noble/hashes@^1.8.0",
		"@std/assert": "jsr:@std/assert@^1.0.13",
		"@std/encoding": "jsr:@std/encoding@^1.0.10"
	},
	"lint": {
		"rules": {
			"tags": ["recommended", "jsr"],
			"include": [
				"jsx-button-has-type",
				"camelcase",
				"default-param-last",
				"eqeqeq",
				"explicit-function-return-type",
				"explicit-module-boundary-types",
				"no-console",
				"no-const-assign",
				"no-eval",
				"no-external-import",
				"no-inferrable-types",
				"no-self-compare",
				"no-sparse-arrays",
				"no-sync-fn-in-async-fn",
				"no-throw-literal",
				"no-undef",
				"no-useless-rename",
				"single-var-declarator"
			],
			"exclude": [
				"verbatim-module-syntax"
			]
		}
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 120,
		"indentWidth": 4,
		"semiColons": false,
		"singleQuote": false,
		"proseWrap": "preserve"
	}
}
